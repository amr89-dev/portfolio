---

interface Props {
  tech: string; 
  size?: "sm" | "md" | "lg";
  class?: string;
}

// Recibe las propiedades
const { tech, size = "md", class: className = "" } = Astro.props;

// Mapeo de tecnologías a sus datos (nombre completo e icono)
const techData = {
  js: { 
    name: "JavaScript", 
    icon: "/svg/javascript 1.svg"
  },
 
 
};


const data = techData[tech] || { name: tech, icon: "/svg/javascript 1.svg", abbr: tech.toUpperCase() };

// Selecciona el tamaño para el badge
const sizeClasses = {
  sm: "h-6 text-xs",
  md: "h-8 text-sm",
  lg: "h-10 text-base"
};

// Componente del icono
const IconComponent = data.icon;
---

<div class={`flex items-center rounded border-2 border-black overflow-hidden ${sizeClasses[size]} ${className}`}>
  <div class="flex items-center justify-center h-full aspect-square bg-black text-white px-1 font-bold">
    {data.abbr}
  </div>
  <div class="px-3 font-mono font-bold bg-yellow-400">
    {data.name}
  </div>
</div>

