---
import Layout from '../layouts/Layout.astro'
import Card from '../components/ui/Card.astro'
import About from '../components/sections/About.astro'
import Experience from '../components/sections/Experience.astro'
import Projects from '../components/sections/Projects.astro'
import Contact from '../components/sections/Contact.astro'
import Education from '../components/sections/Education.astro'
import Stack from '../components/sections/Stack.astro'
---

<Layout title="Portfolio de Amado Martínez">
  <div class="grid grid-cols-1 lg:grid-cols-12 grid-rows-[auto] gap-4 h-[695px]">
    <Card
      href="/about"
      title="Sobre mí"
      class="border-4 border-black lg:col-span-7 lg:row-span-3 lg:max-h-[calc(3*100dvh/7)] bg-card-sapphire"
      icon="user"
    >
      <About />
    </Card>
    <Card
      href="/experience"
      title="Experiencia"
      class="border-4 border-black lg:col-span-5 lg:row-span-5 lg:max-h-[calc(5*100dvh/7)] lg:col-start-8 bg-card-ruby lg:overflow-y-auto"
      icon="briefcase"
    >
      <Experience />
    </Card>
    <Card
      href="/projects"
      title="Proyectos"
      class="border-4 border-black lg:col-span-5 lg:row-span-4 lg:row-start-4 lg:max-h-[calc(4*100dvh/7)] bg-card-emerald lg:overflow-y-auto"
      icon="code"
    >
      <Projects />
    </Card>
    <Card
      href="/contact"
      title="Contacto"
      class="border-4 border-black lg:col-span-2 lg:row-span-2 lg:col-start-6 lg:row-start-4 lg:max-h-[calc(2*100dvh/7)] bg-card-amethyst"
      icon="bookUser"
    >
      <Contact />
    </Card>
    <Card
      href="/stack"
      title="Habilidades"
      icon="cpu"
      class="border-4 border-black lg:col-span-4 lg:row-span-2 lg:col-start-6 lg:row-start-6 lg:max-h-[calc(2*100dvh/7)] bg-card-rose"
    >
      <Stack />
    </Card>
    <Card
      href="/education"
      title="Educación"
      icon="graduation"
      class="border-4 border-black lg:col-span-3 lg:row-span-2 lg:col-start-10 lg:row-start-6 lg:max-h-[calc(2*100dvh/7)] bg-card-amber"
    >
      <Education />
    </Card>
  </div>
</Layout>
