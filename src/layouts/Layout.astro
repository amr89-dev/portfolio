---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	
		<title>{title}</title>
	</head>
	<body class=" bg-yellow-400 font-mono flex flex-col items-center justify-center p-4">
		<slot />
	</body>
</html>

